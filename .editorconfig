# EditorConfig (ref: https://editorconfig.org)

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
[*]
charset = utf-8

# Indentation
[*.{calca,md,py,sh}]
indent_style = space
indent_size = 4

[*.make,Makefile]
indent_style = tab

[*.{tex,sty,yml,yaml}]
indent_style = space
indent_size = 2
max_line_length = 79

